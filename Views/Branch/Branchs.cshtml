@model IEnumerable<VehiChoice.Models.Entities.Branch>

@{
    ViewData["title"] = "Branchs";
    Layout = "_AdminLayout";
    ViewData["Name"] = "Admin";
}

<section class="branchs_page">
    <div class="text-center d-flex align-items-center justify-content-center flex-column" style="width: 20vw; height: 40vh; background-color: #eee; border-radius: 10px;">
        <div class="d-flex center; align-items-center justify-content-center" style="height: 10vh; width: 5vw; background-color: #f5f5f5; border-radius: 50px;">
            <i class="bi bi-plus-lg text-black"></i> 
        </div>
        <small class="mt-4 text-muted">
           <b>
                <a asp-controller="Branch" asp-action="CreateBranch" style="text-decoration: none;">
                    New 
                </a>
           </b>
        </small>
    </div>
    @foreach(var item in Model)
    {
        <div class="text-center pb-3 d-flex align-items-center justify-content-end flex-column text-muted" style="width: 20vw; height: 40vh; background-color: #eee; border-radius: 10px;">
            <b>
                <small>Location : @item.BranchLocation</small>
            </b>
            <b>
                <small>Head : @item.BranchHeadName</small>
            </b>
            <b>
                <small>Date Added : @item.DateCreated</small>
            </b>
            
        </div>
    }
</section>