    <div class="foot_content">
        <h1>Come visit us!</h1>
        <p>AND DRIVE AWAY WITH YOUR NEW CAR</p>
        <section class="icons">
            <div class="icons-items">
                <div>
                    <i class="bi bi-envelope-fill"></i>
                </div>
                <div>
                    <small>abdullahbisiriyu988@gmail.com <br /> abdul.k.1102@gmail.com</small>
                </div>
            </div>
            <div class="icons-items">
                <div>
                    <i class="bi bi-geo-alt-fill"></i>
                </div>
                <div>
                    <small>Gbonogun, Odo-eran road, <br /> Abeokuta, Ogun State</small>
                </div>
            </div>
            <div class="icons-items">
