@using System.Globalization;
@model VehiChoice.DTO.CreatePaymentRequestModel
@{
    ViewData["Title"] = "Make Payment";
    ViewData["Pic"] = ViewBag.Image;
}


<form asp-action="MakePayment">
    <div class="depo_form">
        <h3 class="text-center" style="color: coral;">Make Payment</h3>
        
       
       <div class="form-group mt-5 mb-4">
            <label for="UniqueNumber"><small class="text-muted">Car UIN(Unique Identification Number)</small></label>
            <input type="text" name="UniqueNumber" value="@Model.UniqueNumber" readonly class="form-control" id="UniqueNumber" />
        </div>
        <div class="form-group mb-4">
            <label for="Amount"><small class="text-muted">Price of the Car</small></label>
            <input type="text" name="Amount" value="@Model.Amount.ToString("C", new CultureInfo("en-NG"))" readonly class="form-control" id="Amount" />
        </div>
        <div class="form-group mb-4">
            <label for="location"><small class="text-muted">Location of the Car</small></label>
            <input type="text" name="BranchLocation" value="@Model.BranchLocation" readonly class="form-control" id="location" />
        </div>
        <div class="form-group mt-5 mb-4">
           
            <input type="password" name="WalletPin" asp-for="@Model.WalletPin" class="form-control" id="Pin" placeholder="pin" />
        </div>
        <div class="form-group mb-4">
            <button type="submit" class="form-control bg-primary text-light">Pay</button>
        </div>
    </div>

    
   
</form>








