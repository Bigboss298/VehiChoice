@using System.Globalization;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | VehiChoice</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Nurrdin_Biz_Ventures_MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" asp-append-version="true">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
</head>
<body>
    <header>
        <nav>
            <div class="all_navs">
                <div class="brands">
                    <div class="">
                        <img src="@Url.Content("~/Images/logo.png")" width="70" />
                    </div>
                    <a class="brand" asp-area="" asp-controller="Home" asp-action="Index">VehiChoice</a>
             
                </div>
                <div class="">
                    <ul class="nav_list">
                        <li class="nav-item">
                            <a class="nav-link text-primary" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item text-primary">
                           <a asp-controller="Deposit" asp-action="MakeDeposit" style="text-decoration: none;">
                                @ViewData["Balance"]
                           </a>
                        </li>
                       
                        <li class="nav-item text-primary" style="margin-left: 25px;">
                            @ViewData["Name"]
                        </li>
                        @{
                            if (!User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-primary" asp-area="" asp-controller="User" asp-action="Login">Sign In</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-primary" asp-area="" asp-controller="Customer" asp-action="CreateCustomer">Sign Up</a>
                                </li>

                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-primary" asp-area="" asp-controller="User" asp-action="Logout">Sign Out</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="User" asp-action="CustomerProfile">
                                        <img src="~/ProfilePictures/@ViewData["Pic"]" width="50px" height="50px" style="border-radius: 50px; margin-left: 25px" />
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <section class="all_side_navs" id="sideNav">
        <div>
            <ul class="side-nav-list">
                <li class="side-nav-item">
                    <a class="side-nav-link" asp-area="" asp-controller="User" asp-action="customerProfile">Profile</a>
                </li>
                <li class="side-nav-item">
                    <a class="side-nav-link" asp-area="" asp-controller="Deposit" asp-action="MakeDeposit">Deposit</a>
                </li>
            
                <li class="side-nav-item">
                    <a class="side-nav-link" asp-area="" asp-controller="Car" asp-action="AllCars">Shop</a>
                </li>
            </ul>
        </div>
        <div>
            <ul class="side-nav-list">
                <li class="side-nav-item">
                    <a class="side-nav-link" asp-area="" asp-controller="User" asp-action="Logout">Sign Out</a>
                </li>
            </ul>
        </div>

    </section>

    <div class="nav-space"></div>
    <main>
     <partial name="_Notification" />
        @RenderBody()
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>

    </script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>

        const openNav = document.getElementById('openNavbar');
        const sideNav = document.getElementById('sideNav');
        const body = document.getElementById('body');

        function OpenNav() {

            sideNav.classList.toggle('all_side_navs_active');
            body.classList.toggle('body-content_active');
            if (openNav.classList.contains("bi-list")) {
                openNav.classList.remove("bi-list");
                openNav.classList.add("bi-x");
            } else {
                openNav.classList.remove("bi-x");
                openNav.classList.add("bi-list");
            }
        };


    </script>

</body>
</html>
