@using System.Globalization;
@model VehiChoice.Models.Entities.User_and_Wallet

@{
    ViewData["Title"] = "Admin";
    Layout = "_AdminLayout";
    ViewData["Name"] = "Admin";
}



<section style="background-color: #eee;">
    <div class="container">
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">User</a></li>
                        <li class="breadcrumb-item active" aria-current="page">User Profile</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row">
            @*User Information*@
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <img src="~/ProfilePictures//0e6a2af6-ca07-4539-b01a-a978553d7811IMG_20221125_130654.jpg" alt="avatar"
                             class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3">@Model.User.FirstName @Model.User.LastName</h5>
                        <p class="text-muted mb-1">@Model.User.Email</p>
                        <p class="text-muted mb-1">@Model.User.Location</p>
                        <p class="text-muted mb-4">@Model.Wallet.WalletType</p>
                        <div class="d-flex justify-content-center mb-2 row">
                            <button type="button" class="btn btn-primary col-10">Edit</button>
                            @* <button type="button" class="btn btn-outline-primary ms-1">Message</button> *@
                        </div>
                    </div>
                </div>
            </div>
            @*Wallet Information*@
            <div class="col-lg-8">
                <div class="card mb-4 p-5">
                    @* when adding something else remove the style property to make it look cool *@
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Wallet Number</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Wallet.WalletNumber</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Wallet Name </p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Wallet.WalletName</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Wallet Balance</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Wallet.WalletBalance.ToString("C", new CultureInfo("en-NG"))</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Mobile</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.User.PhoneNumber</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Wallet Type</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Wallet.WalletType Wallet</p>
                            </div>
                        </div>
                    </div>
                </div>
                 <div class="row">
                <div class="col-md-6">
                <div class="card mb-4 mb-md-0">
                <div class="card-body">
                <p class="mb-4">
                <span class="text-primary font-italic me-1">assigment</span> Project Status
                </p>
                <p class="mb-1" style="font-size: .77rem;">Web Design</p>
                <div class="progress rounded" style="height: 5px;">
                <div class="progress-bar" role="progressbar" style="width: 80%" aria-valuenow="80"
                aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <p class="mt-4 mb-1" style="font-size: .77rem;">Website Markup</p>
                <div class="progress rounded" style="height: 5px;">
                <div class="progress-bar" role="progressbar" style="width: 72%" aria-valuenow="72"
                aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <p class="mt-4 mb-1" style="font-size: .77rem;">One Page</p>
                <div class="progress rounded" style="height: 5px;">
                <div class="progress-bar" role="progressbar" style="width: 89%" aria-valuenow="89"
                aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <p class="mt-4 mb-1" style="font-size: .77rem;">Mobile Template</p>
                <div class="progress rounded" style="height: 5px;">
                <div class="progress-bar" role="progressbar" style="width: 55%" aria-valuenow="55"
                aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <p class="mt-4 mb-1" style="font-size: .77rem;">Backend API</p>
                <div class="progress rounded mb-2" style="height: 5px;">
                <div class="progress-bar" role="progressbar" style="width: 66%" aria-valuenow="66"
                aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                </div>
                </div>
                </div>
                <div class="col-md-6">
                <div class="card mb-4 mb-md-0">
                <div class="card-body">
                <p class="mb-4">
                <span class="text-primary font-italic me-1">assigment</span> Project Status
                </p>
                <p class="mb-1" style="font-size: .77rem;">Web Design</p>
                <div class="progress rounded" style="height: 5px;">
                <div class="progress-bar" role="progressbar" style="width: 80%" aria-valuenow="80"
                aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <p class="mt-4 mb-1" style="font-size: .77rem;">Website Markup</p>
                <div class="progress rounded" style="height: 5px;">
                <div class="progress-bar" role="progressbar" style="width: 72%" aria-valuenow="72"
                aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <p class="mt-4 mb-1" style="font-size: .77rem;">One Page</p>
                <div class="progress rounded" style="height: 5px;">
                <div class="progress-bar" role="progressbar" style="width: 89%" aria-valuenow="89"
                aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <p class="mt-4 mb-1" style="font-size: .77rem;">Mobile Template</p>
                <div class="progress rounded" style="height: 5px;">
                <div class="progress-bar" role="progressbar" style="width: 55%" aria-valuenow="55"
                aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <p class="mt-4 mb-1" style="font-size: .77rem;">Backend API</p>
                <div class="progress rounded mb-2" style="height: 5px;">
                <div class="progress-bar" role="progressbar" style="width: 66%" aria-valuenow="66"
                aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                </div>
                </div>
                </div>
                </div>
            </div>
        </div>
    </div>

</section>
































