@model VehiChoice.DTO.LoginRequestModel

@{
    ViewData["title"] = "Login";
}

<div class="nav-space"></div>
<div class="row container">
    <div class="col">
        <img src="~/Images/car-silver.png" width="600" />
    </div>
    @*<form asp-action="LogIn" class="login-form col col-xl-5">*@
    <div class="login-form col col-xl-5">
        @using (Html.BeginForm("Login", "User", FormMethod.Post))
        {
            @*@Html.AntiForgeryToken()*@

            <h3 class="text-center" style="color: coral;">Login</h3>
            <div class="form-group">
                <input type="email" name="Email" asp-for="@Model.Email" class="form-control" id="Email" placeholder="Email Address" />
            </div>
            <div class="form-group">
                <input type="password" name="Password" asp-for="@Model.Password" class="form-control" id="Password" placeholder="Password" />
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.ReturnUrl))
            {
                <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
            }
            <div class="form-group">
                <button type="submit" class="form-control">Login</button>
            </div>
            <p><small>Does not have an account? <a asp-controller="Customer" asp-action="CreateCustomer">Sign Up</a> </small></p>
            @*</form>*@
        }
    </div>
</div>

